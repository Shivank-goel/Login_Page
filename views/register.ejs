<%- include('partials/header') %>
<section class="vh-100" style="background-color: #9DC08B;">
<div class="container py-5 h-100">

  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col col-xl-10">
      <div class="card" style="border-radius: 1rem;">
      <div class="row g-0">
        <div class="col-md-6 col-lg-5 d-none d-md-block">
        <img src="https://images.wallpaperscraft.com/image/single/city_singapore_hotel_58356_1920x1280.jpg"
                alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; width: 400px;
                height: 600px;
                object-fit: cover; " />
                </div>
        <div class="col-md-6 col-lg-7 d-flex align-items-center">
        <div class="card-body p-4 p-lg-5 text-black">

          <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-regular fa-hotel fa-2xl " style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Sign Up</span>
                  </div>
          <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create your account</h5>
          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST">
            <div class="form-outline mb-4">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-outline mb-4">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-success btn-lg btn-block">Sign Up</button>
          </form>
          <hr/>
          <a class="btn btn-block btn-primary" style="background-color: #dd4b39" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
        </div>
        </div>
      </div>
      </div>

    </div>

  </div>
</div>


</section>
<%- include('partials/header') %>
